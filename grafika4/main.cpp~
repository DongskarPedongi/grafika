int main() {
  system("clear");
  Polygon* p = printBaling();
  while(true){
    p->rotate(5,Point(400,300));
    p->print(fb);
    usleep(50000);
    fb.clear();
  }
  //printBaling()->print(fb);
  //run();
  return 0;
}
